<!DOCTYPE html>
<html lang="en">


<%- include('../../../partials/cpanel/domestic/head'); %>

    <body class="vertical-layout">
        <!-- Start Containerbar -->
        <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('../../../partials/cpanel/domestic/header'); %>

                <!-- Start Breadcrumbbar -->
                <div class="breadcrumbbar">
                    <div class="row align-items-center">
                        <div class="col-md-8 col-lg-8">
                            <h4 class="page-title">Domestic Waste Submission</h4>
                        </div>
                    </div>
                </div>
                <!-- End Breadcrumbbar -->
                <!-- Submit Form -->
                <div class="contentbar">
                    <!-- Start row -->
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card m-b-30">
                                <div class="card-body">
                                    <form method="post" id="myForm"> <!--action="/waste_submit"-->
                                        <!-- Start row -->


                                        <div class="row">

                                            <!-- upload image -->
                                            <div class="col-12 mb-3">
                                                <label>Upload Your Waste Images from diffrent angles</label>
                                                <div class="file-drop-area justify-content-center">
                                                    <span class="fake-btn btn btn-secondary">Choose files</span>
                                                    <span class="file-msg">or drag and drop files here</span>
                                                    <input class="file-input" type="file" multiple accept="image/*">
                                                </div>
                                            </div>


                                            <div class="col-12 col-md-6">
                                                <div class="form-group">
                                                    <label for="inputAddress">Address</label>
                                                    <textarea rows="2" class="form-control" id="inputAddress"
                                                        placeholder="XYZ Main Road..."></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputCity">City</label>
                                                <input type="text" placeholder="city" class="form-control"
                                                    id="inputCity">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">

                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputState">State</label>
                                                        <select id="inputState" class="form-control">
                                                            <option selected>Choose...</option>
                                                            <option>...</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="inputZip">Pincode</label>
                                                        <input type="text" class="form-control" id="inputZip"
                                                            placeholder="Pincode">
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="form-group">
                                                            <label for="notes">Extra Notes</label>
                                                            <textarea rows="3" class="form-control" id="notes"
                                                                placeholder="Your Notes"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-12">

                                                        <label for="inputAddress">Type of Waste Required</label>
                                                        <select multiple class="form-control"
                                                            id="formControlSelectMultiple" name="Type">
                                                            <option>Plastic</option>
                                                            <option>Metallic</option>
                                                            <option>Wool</option>
                                                            <option>Clothes</option>
                                                            <option>Oil</option>
                                                            <option>Glass</option>
                                                            <option>Paper</option>
                                                            <option>Electronic</option>
                                                            <option>Chemical</option>
                                                        </select>
                                                        <style>
                                                            select.form-control[multiple] {
                                                                height: 84px;
                                                            }
                                                        </style>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">


                                                            <label for="number">Estimated Weight (kg):</label>
                                                            <input type="number" class="form-control"
                                                                id="touchspin-estimated-weight-btn"
                                                                name="Estimated Weight" value="50" min="50" max="1000">

                                                        </div>

                                                    </div>

                                                </div>

                                                <div class="row">
                                                    <!-- Hidden input fields for latitude, longitude, and submission time -->
                                                    <input type="hidden" id="latitude" name="latitude">
                                                    <input type="hidden" id="longitude" name="longitude">
                                                    <input type="hidden" id="submissionTime" name="submissionTime">
                                                    <!-- Submit button with thank you page for the form -->
                                                    <a href="/cpanel/domestic/greetings" onclick="submitForm();"
                                                        type="submit" class="btn btn-primary m-b-20 m-l-15">Submit</a>
                                                </div>






                                    </form>
                                </div>
                            </div>
                        </div>

                    </div> <!-- End row -->
                </div>
                <!-- Submit Form End -->
                <%- include('../../../partials/cpanel/domestic/footer'); %>
                    <script>
                        function submitForm() {
                            document.getElementById('myForm').submit();
                        }
                    </script>

    </body>

</html>